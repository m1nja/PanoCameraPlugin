<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/main_bg"
                android:endColor="@color/main_bg" />
        </shape>
    </item>

    <item  android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/main_jicha_staus_finish"
                    android:endColor="@color/main_jicha_staus_finish" />
            </shape>
        </clip>
    </item>
</layer-list>